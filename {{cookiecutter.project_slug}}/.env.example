# Django Settings
DEBUG=1
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/{{cookiecutter.project_slug}}

{% if cookiecutter.use_celery == "yes" or cookiecutter.use_websocket == "yes" -%}
# Redis
REDIS_URL=redis://redis:6379/0
{% endif -%}

{% if cookiecutter.use_celery == "yes" -%}
# Celery
CELERY_BROKER_URL=redis://redis:6379/0
{% endif -%}

{% if cookiecutter.use_websocket == "yes" -%}
# Channels (WebSocket)
CHANNEL_LAYERS_HOST=redis://redis:6379/1
{% endif -%}

# AWS S3 (Required for all environments)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME={{cookiecutter.project_slug}}-media-prod

# CORS (Production - comma separated)
CORS_ALLOWED_ORIGINS=https://example.com,https://www.example.com
